<div id="message">
  {{ message }}
</div>
<div id="info">
  <table>
    <tr>
      <th>pod:</th>
      <td>{{ hostName }}</td>
    </tr>
    <tr>
      <th>node:</th>
      <td>{{ platform }} ({{ release }})</td>
    </tr>
    <tr>
      <th>Ingress IP:</th>
      <td>{{ ingressIP }}</td>
    </tr>
    <tr>
      <th>Egress IP:</th>
      <td>{{ egressIP }}</td>
    </tr>
  </table>

</div>
